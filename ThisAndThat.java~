import jutils.Keyboard;

public class ThisAndThat {

    public static void main(String[] args) {

	int counter = 1;

	while (true) {

	    System.out.print("This ");
	    for (int i = 0; i < counter; i++)
		System.out.print("and ");
	    System.out.println("that.");
	    Keyboard.readString();
	    
	}

    }
    
}
